= form_for(@video) do |f|
  - if @video.errors.any?
    #error_explanation
      %h2
        = pluralize(@video.errors.count, "error")
        prohibited this video from being saved:
      %ul
        - @video.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :nombre
    %br/
    = f.text_field :name
  .field
    = f.label 'Youtube URL'
    %br/
    = f.text_field :url
  .field
    = f.label :dirección
    %br/
    = f.text_field :address, :readonly => true
  .field
    = f.label :región
    %br/
    = f.text_field :state, :readonly => true
  .field
    = f.label :país
    %br/
    = f.text_field :country, :readonly => true

  .field.hidden
    = f.text_field :latitude
  .field.hidden
    = f.text_field :longitude
  .field.hidden
    = f.text_field :content
