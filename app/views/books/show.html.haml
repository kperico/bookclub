- model_class = @book.class
%h1= t '.title', :default => model_class.model_name.human
%dl.dl-horizontal
  %dt
    %strong
      = model_class.human_attribute_name(:title)
      \:
  %dd= @book.title
  %dt
    %strong
      = model_class.human_attribute_name(:author)
      \:
  %dd= @book.author
  %dt
    %strong
      = model_class.human_attribute_name(:description)
      \:
  %dd= @book.description
  %dt
    %strong
      = model_class.human_attribute_name(:published_date)
      \:
  %dd= @book.published_date
  %dt
    %strong
      = model_class.human_attribute_name(:url)
      \:
  %dd= @book.url
.form-actions
  = link_to t('.back', :default => t("helpers.links.back")),
    books_path, :class => 'btn'
  -#
  = link_to t('.edit', :default => t("helpers.links.edit")),
    edit_book_path(@book), :class => 'btn'
  -#
  = link_to t('.destroy', :default => t("helpers.links.destroy")),
    book_path(@book),
    :method => 'delete',
    :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
    :class => 'btn btn-danger'
